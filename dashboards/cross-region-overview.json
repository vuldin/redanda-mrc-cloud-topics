      "targets": [
        {
          "expr": "sum by (instance) (rate(redpanda_kafka_request_bytes_total{redpanda_request=\"consume\"}[5m]))",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
