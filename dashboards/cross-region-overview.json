      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le, instance) (rate(redpanda_kafka_request_latency_seconds_bucket{redpanda_request=\"produce\"}[5m])))",
          "legendFormat": "p99 {{instance}}"
        },
        {
          "expr": "histogram_quantile(0.50, sum by (le, instance) (rate(redpanda_kafka_request_latency_seconds_bucket{redpanda_request=\"produce\"}[5m])))",
          "legendFormat": "p50 {{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "title": "Consumer Group Lag",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (redpanda_group) (redpanda_kafka_consumer_group_lag)",
          "legendFormat": "{{redpanda_group}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          }
        }
      }
    },
    {
      "title": "Raft Heartbeat Latency",
